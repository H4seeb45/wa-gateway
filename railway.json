{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": [
            "nodejs",
            "chromium",
            "glib",
            "nss",
            "nspr",
            "atk",
            "at-spi2-atk",
            "libdrm",
            "mesa",
            "gtk3"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "node index.js",
    "restartPolicyType": "ON_FAILURE",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300
  }
}